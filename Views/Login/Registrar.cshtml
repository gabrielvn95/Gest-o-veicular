@using GestaoVeiculo.Dto
@model UsuarioRegisterDto

@{
	Layout = "_LayoutDesloagada";
}

@if(TempData["MensagemSucesso"] != null)
{
	<div class="alert alert-sucess text-light" role="alert">
		@TempData["MensagemSucesso"]
	</div>
}

@if(TempData["MensagemErro"] != null)
{
	<div class="alert alert-danger text-light" role="alert">
		@TempData["MensagemErro"]
	</div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<div>
	<h1 class="text-center mb-4">Cadastro de Usuário</h1>

	<form asp-action="Registrar" asp-controller="Login" method="post" class="p-4 border rounded shadow" style="max-width: 400px; margin: 0 auto; background-color: #f8f9fa">
		<h3 class="text-center mb-4">Crie sua conta</h3>

		<div class="mb-3">
			<label for="email" class="form-label">E-mail:</label>
			<input type="email" class="form-control" id="email" aria-describedby="email" placeholder="Digite seu e-mail" asp-for="Email"/>
		</div>

		<div class="mb-3">
			<label for="nome" class="form-label">Nome:</label>
			<input type="text" class="form-control" id="nome" aria-describedby="nome" placeholder="Digite seu nome" asp-for="Nome" />
		</div>

		<div class="mb-3">
			<label for="sobrenome" class="form-label">Sobrenome:</label>
			<input type="text" class="form-control" id="sobrenome" aria-describedby="sobrenome" placeholder="Digite seu sobrenome" asp-for="SobreNome" />
		</div>

		<div class="mb-3">
			<label for="senha" class="form-label">Senha:</label>
			<input type="password" class="form-control" id="senha" aria-describedby="senha" placeholder="Digite sua senha" asp-for="Senha" />
		</div>

		<div class="mb-3">
			<label for="confirmaSenha" class="form-label">Confirmar Senha:</label>
			<input type="password" class="form-control" id="confirmaSenha" aria-describedby="confirmaSenha" placeholder="Confirme sua senha!" asp-for="ConfirmaSenha" />
		</div>

		<div class="d-flex justify-content-center mb-3">
			<button type="submit" class="btn btn-primary w-100 mb-3" style="border-radius: 25px;">Cadastrar</button>
		</div>
		<div class="text-center">
			<a asp-action="Login" asp-controller="Login" class="btn btn-outline-secondary w-100" style="border-radius: 25px;">Voltar</a>
		</div>
	</form>
</div>