@model GestaoModel

@{
    ViewData["Title"] = "Excluir";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container bg-dark p-4 rounded-5" style="max-width: 600px;">
    <div class="mb-4 text-center">
        <h1 class="text-light">Excluir Veículo</h1>
        <p class="text-light">Tem certeza de que deseja excluir o veículo abaixo?</p>
    </div>

    <form method="post" asp-controller="Gestao" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label text-light">Nome:</label>
            <input type="text" class="form-control text-dark" asp-for="Nome" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">CPF:</label>
            <input type="text" class="form-control text-dark" asp-for="Cpf" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">RG:</label>
            <input type="text" class="form-control text-dark" asp-for="Rg" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Email:</label>
            <input type="text" class="form-control text-dark" asp-for="Email" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Telefone:</label>
            <input type="text" class="form-control text-dark" asp-for="Telefone" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Vendedor:</label>
            <input type="text" class="form-control text-dark" asp-for="NomeVendedor" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Avaliador:</label>
            <input type="text" class="form-control text-dark" asp-for="NomeAvaliador" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Marca:</label>
            <input type="text" class="form-control text-dark" asp-for="MarcaCarro" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label text-light">Modelo:</label>
            <input type="text" class="form-control text-dark" asp-for="ModeloCarro" readonly />
        </div>

        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-danger btn-sm w-50">Excluir</button>
            <a class="btn btn-primary btn-sm w-50" asp-controller="Gestao" asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>
