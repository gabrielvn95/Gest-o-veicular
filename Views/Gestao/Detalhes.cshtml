            </div>

            <div class="mb-3">
                <label for="ValorFinanciamento" class="form-label text-light">Valor de Financiamento:</label>
            <input type="text" class="form-control text-dark" asp-for="ValorFinanciamento" id="ValorFinanciamento" disabled />
                <span class="text-danger" asp-validation-for="ValorFinanciamento"></span>
            </div>

            <div class="mb-3">
                <label for="Opcionais" class="form-label text-light">Opcionais:</label>
            <input type="text" class="form-control text-dark" asp-for="Opcionais" id="Opcionais" disabled />
                <span class="text-danger" asp-validation-for="Opcionais"></span>
            </div>

            <div class="mb-3">
                <label for="Multas" class="form-label text-light">Multas:</label>
            <input type="text" class="form-control text-dark" asp-for="Multas" id="Multas" disabled />
                <span class="text-danger" asp-validation-for="Multas"></span>
            </div>

        <div class="d-flex gap-3 mt-4">
            <a class="btn btn-primary btn-sm w-100" asp-controller="Gestao" asp-action="Index">Voltar</a>
        </div>

        </form>
</div>
