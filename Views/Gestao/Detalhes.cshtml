@model GestaoModel

@{
	ViewData["Title"] = "Detalhes dos Dados";
}

<div class="container bg-dark p-4 rounded-5 " style="max-width: 600px;">
	<div class="mb-4 text-center">
		<h1 class="text-light">Detalhes</h1>
	</div>

	<form method="get" asp-controller="Gestao" asp-action="Detalhes">
	<input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label for="Nome" class="form-label text-light">Nome:</label>
                <input type="text" class="form-control text-dark" asp-for="Nome" id="Nome" disabled />
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>

            <div class="mb-3">
                <label for="Cpf" class="form-label text-light">CPF:</label>
            <input type="text" class="form-control text-dark" asp-for="Cpf" id="Cpf" disabled />
                <span class="text-danger" asp-validation-for="Cpf"></span>
            </div>

            <div class="mb-3">
                <label for="Rg" class="form-label text-light">RG:</label>
            <input type="text" class="form-control text-dark" asp-for="Rg" id="Rg" disabled />
                <span class="text-danger" asp-validation-for="Rg"></span>
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label text-light">Email:</label>
            <input type="text" class="form-control text-dark" asp-for="Email" id="Email" disabled />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label for="Telefone" class="form-label text-light">Telefone:</label>
            <input type="text" class="form-control text-dark" asp-for="Telefone" id="Telefone" disabled />
                <span class="text-danger" asp-validation-for="Telefone"></span>
            </div>

            <div class="mb-3">
                <label for="NomeVendedor" class="form-label text-light">Vendedor:</label>
            <input type="text" class="form-control text-dark" asp-for="NomeVendedor" id="NomeVendedor" disabled />
                <span class="text-danger" asp-validation-for="NomeVendedor"></span>
            </div>

            <div class="mb-3">
                <label for="NomeAvaliador" class="form-label text-light">Avaliador:</label>
            <input type="text" class="form-control text-dark" asp-for="NomeAvaliador" id="NomeAvaliador" disabled />
                <span class="text-danger" asp-validation-for="NomeAvaliador"></span>
            </div>

            <div class="mb-3">
                <label for="MarcaCarro" class="form-label text-light">Marca:</label>
            <input type="text" class="form-control text-dark" asp-for="MarcaCarro" id="MarcaCarro" disabled />
                <span class="text-danger" asp-validation-for="MarcaCarro"></span>
            </div>

            <div class="mb-3">
                <label for="ModeloCarro" class="form-label text-light">Modelo:</label>
            <input type="text" class="form-control text-dark" asp-for="ModeloCarro" id="ModeloCarro" disabled />
                <span class="text-danger" asp-validation-for="ModeloCarro"></span>
            </div>

            <div class="mb-3">
                <label for="Ano" class="form-label text-light">Ano:</label>
            <input type="text" class="form-control text-dark" asp-for="Ano" id="Ano" disabled />
                <span class="text-danger" asp-validation-for="Ano"></span>
            </div>

            <div class="mb-3">
                <label for="Documentacao" class="form-label text-light">Documentação:</label>
            <input type="text" class="form-control text-dark" asp-for="Documentacao" id="Documentacao" disabled />
                <span class="text-danger" asp-validation-for="Documentacao"></span>
            </div>

            <div class="mb-3">
                <label for="ValorVenda" class="form-label text-light">Valor de Venda:</label>
            <input type="text" class="form-control text-dark" asp-for="ValorVenda" id="ValorVenda" disabled />
